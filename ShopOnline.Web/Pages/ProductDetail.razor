@page "/ProductDetails/{Id:int}"
@inherits ProductDetailBase


@if(Product==null && ErrorMessgae==null){
    <h3>Loading Product details...........</h3>
}
else if(ErrorMessgae!=null){
    <h3 class="text-danger">@ErrorMessgae</h3>
}
else{
    <h3 class="mb-5">Product Details</h3>

    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@Product.ImageURL">

        </div>
        <div class="col-md-6">
            <h3>@Product.Name</h3>
            <p class="mb-4">@Product.Description</p>
            <p> 
                <b>
                    @Product.Price.ToString("C")&nbsp;(@Product.Qty items in stock)
                </b>
            </p>
        </div>
    </div>
}